@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;

<!--Grade Calculator form that sends info to the js program.-->
<h2>Grade Calculator:</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="assignmentPercent" asp-for="Assignments" /><br />
    <label>Group Project:</label>
    <input id="groupPercent" asp-for="Group" /><br />
    <label>Quizzes:</label>
    <input id="quizPercent" asp-for="Quizzes" /><br />
    <label>Midterm Exam:</label>
    <input id="midtermPercent" asp-for="Midterm" /><br />
    <label>Final Exam:</label>
    <input id="finalPercent" asp-for="Final" /><br />
    <label>INTEX:</label>
    <input id="intexPercent" asp-for="INTEX" /><br />
    <input id="btnSend" type="submit" value="Calculate Grade" /><br />

    <div asp-validation-summary="All"></div>
</form>

<script src="lib/bootstrap/js/bootstrap.min.js"></script>
<script src="lib/jquery/jquery-3.6.3.min.js"></script>
<script src="js/GradeCalculator.js"></script>